# MYDON Roadmap Hub - Environment Variables
# Copy this file to .env and fill in your values

# ============ REQUIRED ============

# Database connection string (MySQL)
# For Docker: mysql://mydon:mydonpassword@localhost:3306/mydon
DATABASE_URL=mysql://user:password@localhost:3306/mydon

# JWT secret for session cookies (generate with: openssl rand -hex 32)
JWT_SECRET=your-secure-random-string-here

# Application ID (used for OAuth)
VITE_APP_ID=mydon-roadmap

# ============ AUTHENTICATION ============
# Leave VITE_OAUTH_PORTAL_URL empty to use DEV MODE (local auth at /dev/login)
# For production, set your OAuth portal URL
OAUTH_SERVER_URL=http://localhost:3000/api/oauth
VITE_OAUTH_PORTAL_URL=

# Owner OpenID (user who gets admin role automatically)
# In dev mode, use "dev-admin" for the built-in admin user
OWNER_OPEN_ID=dev-admin

# ============ AI PROVIDERS ============
# At least one AI provider API key is required for AI features

# OpenRouter API (provides access to multiple AI models) - RECOMMENDED
# Get key: https://openrouter.ai/keys
OPENROUTER_API_KEY=
BUILT_IN_FORGE_API_URL=https://openrouter.ai/api
BUILT_IN_FORGE_API_KEY=

# OpenAI
# Get key: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic Claude
# Get key: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# Google AI Studio (Gemini)
# Get key: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=

# X.AI (Grok)
# Get key: https://x.ai/api
XAI_API_KEY=

# Perplexity AI
# Get key: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# ============ FREE TIER PROVIDERS ============

# Groq (FREE - 14,400 req/day, fastest inference)
# Get key: https://console.groq.com/keys
GROQ_API_KEY=

# Hugging Face (FREE inference API)
# Get key: https://huggingface.co/settings/tokens
# HUGGINGFACE_API_KEY=hf_...

# DeepSeek (very cheap - $0.14/1M tokens)
# Get key: https://platform.deepseek.com/api_keys
# DEEPSEEK_API_KEY=sk-...

# Together AI ($25 free credits)
# Get key: https://api.together.xyz/settings/api-keys
# TOGETHER_API_KEY=...

# Cohere (FREE tier - 1000 req/month)
# Get key: https://dashboard.cohere.com/api-keys
# COHERE_API_KEY=...

# Mistral AI (FREE - 1B tokens/month)
# Get key: https://console.mistral.ai/api-keys
# MISTRAL_API_KEY=...

# ============ LOCAL AI (100% FREE) ============
# Ollama - run models locally
# Install: brew install ollama && ollama pull llama3
OLLAMA_BASE_URL=http://localhost:11434

# ============ STRIPE PAYMENTS (Optional) ============
# Required only for payment features
# Get keys: https://dashboard.stripe.com/apikeys

# STRIPE_SECRET_KEY=sk_test_...
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ============ OPTIONAL ============

# Server port (default: 3000)
PORT=3000

# Node environment (development/production)
NODE_ENV=development

# Application URL (used for iCal feeds, exports)
VITE_APP_URL=http://localhost:3000

# Telegram bot (for notifications)
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_BOT_USERNAME=mydon_roadmap_bot

# AI Cache (recommended for development)
AI_CACHE_ENABLED=true

# Logging level (debug/info/warn/error)
LOG_LEVEL=debug

# ============ OPENCLAW INTEGRATION ============
# OpenClaw Gateway for AI agents and multi-channel messaging
# Install: https://docs.openclaw.ai/install
OPENCLAW_ENABLED=false
OPENCLAW_GATEWAY_URL=http://127.0.0.1:18789
OPENCLAW_CLI_PATH=/Users/js/.local/bin/openclaw
